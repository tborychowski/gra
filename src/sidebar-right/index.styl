@import "lib"


.sidebar-right
	position absolute
	right 0
	top 0
	bottom 0
	width sidebar-w
	color #ccc
	padding 0 15
	overflow-y auto


.locations
	margin 0
	padding 0
	list-style none

	li
		padding 0
		display block
		margin 0 0 5

		a
			display block
			padding 5 10
			text-decoration none
			color #ccc
			border-radius 5px

			&:hover
				background-color #fff1

			&.active
				background-color #fff2
				color #fff
