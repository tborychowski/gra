@import "lib"


.sidebar-right
	width sidebar-w
	height 100%
	color #ccc
	padding 0 15
	overflow-y auto


.locations
	margin 0
	padding 0
	list-style none

	li
		padding 5 0 10
		display block
		margin 0 0 5
		border-bottom 1px solid #222

		a
			display block
			padding 5 10
			text-decoration none
			color #ccc
			border-radius 5px

			&:hover
				background-color #fff1

			&.active
				background-color #fff2
				color #fff
				pointer-events none
