@import "lib"


main
	position absolute
	left sidebar-w
	top 0
	bottom 0
	right 0
	padding 0 10
	display flex
	flex-flow column

	section
		flex 1
		overflow-y auto

	h2
		margin 0

	.day
		padding 20px
		margin-bottom 20px

		&:last-child
			margin-bottom 200px


.store-front
	display flex
	flex-flow row
	align-items top
	justify-content space-between
	padding-bottom 20

	.table-wrap
		flex 1
		margin-right 5
		bg #ccc
		padding 10

		&:last-child
			margin-right 0
			margin-left 5

		table
			width 100%

